

{%- style -%}
  .quote {
    background-color: #1c1c1c;
}
  .quote * {
    color: #ffffff;
}
  .quote__wrapper {
    margin: 0 auto;
    max-width: 1160px;
    padding: 41px 20px 57px;
    text-align: left;
}
  .quote__icon {
        font-family: georgia-bold,serif;
    font-size: 15.5rem;
    line-height: 7.9375rem;
}
  .quote__content {
    font-family: georgia,serif;
        font-size: 2.5rem;
    line-height: 3.5rem;
    margin-bottom: 59px;
    margin-top: -10px;
    max-width: 630px;
}
  .quote__author {
    display: block;
    font-family: nunito-sans--bold,Arial,sans-serif;
    font-size: 1.3rem;
    line-height: 1.125rem;
}
  .quote__author-backline {
    font-family: nunito-sans--light,Arial,sans-serif;
    font-size: 1.2rem;
    line-height: 1.125rem;
}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .quote__wrapper {
    padding: 54px 0 73px 100px;
}
    .quote__content {
    margin-bottom: 45px;
    margin-top: 0;
}
  }
  
{%- endstyle -%}
<div class="wanted_rich-text layout-section quote">
 <div class="quote__wrapper">
