    <p class="quote__content">{{section.settings.qote_txt-}}</p>
    <div class="quote__author-wrapper">
      <span class="quote__author">{{section.settings.qote_caption}}</span>
      <span class="quote__author-backline">{{section.settings.qote_subtitle}}</span>
    </div>
  </div> 
</div>
{% schema %}
{
  "name": "Wanted_rich-text",
  "settings": [
    {
      "type": "textarea",
      "id": "qote_txt",
      "label": "quote text"
    },
    {
      "type": "text",
      "id": "qote_caption",
      "label": "quote text"
    },    
    {
      "type": "text",
      "id": "qote_subtitle",
      "label": "quote subtitle"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Wanted_rich-text"
    }
      ]
}
{% endschema %}
