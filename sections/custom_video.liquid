{% if section.settings.show_hide %}
{% style %}
.announce_header_parent {
  height: 100vh;
}
  section.custom_video video {
    height: 100vh;
    object-fit: cover;
}
  {% if section.settings.container %}
section.custom_video.{{ section.id }}{
  max-width: 85%;
  margin: 0px auto 60px;
}
  {% endif %}
  @media(max-width: 767px){
    .product--template section.custom_video.{{ section.id }}{
  max-width: 100%;
      padding-bottom: 60px;
    background: #f2f2f2;
}
  }
{% endstyle %}

{% if section.settings.make_animate == true %}
<span class="js-on-show cust_vid color-{{ section.settings.color_scheme }} background-{{ section.settings.background_style }} section-{{ section.id }}-padding isolate" data-onshow-target=".custom_video" data-onshow-class="animation--fade-up animated">
{% endif %}
<section class="custom_video {% if section.settings.make_animate == true %} not_100vh_on_mob animation--on-show {% endif %} {{ section.id }}">
  {{ section.settings.custom_video | video_tag: autoplay: section.settings.auto,controls: section.settings.controls, loop: true, muted: true, width: '100%'}}
  {%- if section.settings.button_label != blank -%}
  <div class="custom_view_all center collection-list-view-all{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
  <a{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
    {{ section.settings.button_label | escape }}
  </a>
  </div>
  {%- endif -%}
</section>
{% if section.settings.make_animate == true %}
</span>  
{% endif %}
{% endif %}
{% schema %}
  {
    "name": "Custom video",
    "settings": [
    {
      "type": "checkbox",
      "id": "show_hide",
      "label": "Show/Hide",
      "default": false
    },
      {
        "type": "video",
        "label": "main custom video",
        "id":"custom_video"
      },
      {
        "type": "image_picker",
        "label": "Video Poster",
        "id":"video_poster"
      },
      {
        "type": "checkbox",
        "id": "controls",
        "label": "enable controls"
      },
      {
        "type": "checkbox",
        "id": "auto",
        "label": "Enable autoplay",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "container",
        "label": "container enable"
      },
      {
      "type": "select",
      "id": "background_style",
      "options": [
        {
          "value": "none",
          "label": "t:sections.multicolumn.settings.background_style.options__1.label"
        },
        {
          "value": "primary",
          "label": "t:sections.multicolumn.settings.background_style.options__2.label"
        }
      ],
      "default": "primary",
      "label": "t:sections.multicolumn.settings.background_style.label"
    },
      {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
      {
      "type" : "text",
      "id": "button_label",
      "label": "button label"
    },
    {
      "type" : "url",
      "id": "button_link",
      "label": "button url"
    },
    {
      "type": "checkbox",
      "id": "make_animate",
      "label": "make video animate"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets": [
      {
      "name":"custom video"
      }  
    ]
  }
{% endschema %}

