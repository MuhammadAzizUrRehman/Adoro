{%- style -%}
  .signatures__wrapper {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
        max-width: 675px;
    margin: 0px auto;
}
  .signature__item {
    text-align: center;
}
  .signature-item__image {
    margin-bottom: 10px;
}
  .signature-item__name {
    font: 1.2rem/1.125rem nunito-sans,Arial,sans-serif;
    text-transform: uppercase;
    margin: 0px;
}
  .signature-item__title {
    font: 1rem/1rem nunito-sans,Arial,sans-serif;
    text-transform: uppercase;
}
  .signature__item img {
    width: 100%;
}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .signature__item img {
    max-height: 100px;
}

  }
  @media screen and (max-width: 750px){
              .image-card {
    width: 100% !important;
}
  }
{%- endstyle -%}
<section class="story_page_sig_imgs signatures__wrapper page-width  section-{{ section.id }}-padding">
  {% for block in section.blocks %}
  <div class="signature__item">
    {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
    {{ block.settings.image | image_url: width: 1420 | image_tag:
      loading: 'lazy',
      sizes: sizes,
      widths: '275, 550, 710, 1420'
    }}
    <h6 class="signature-item__name">{{ block.settings.title }}</h6>
    <span class="signature-item__title">{{ block.settings.subtitle }}</span>
  </div>
  {% endfor %}  
</section>  
{% schema %}
  {
    "name": "story page sign images",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
        "name": "image_block",
        "type": "image_block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "title"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "subtitle"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "story page sign images"
      }
    ]
  }
{% endschema %}

