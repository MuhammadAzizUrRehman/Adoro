 <style>

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .maindiv {
      background: #F2F2F2;
      width: 100%;
      display: flex;
      justify-content: center;
      flex-direction: row;
      align-items: center;
  }

  .layout-section__eyebrow {
      color: #930303;
      font-family: nunito-sans--bold, Arial, sans-serif;
      font-size: 1.2rem;
      letter-spacing: .0625rem;
      line-height: 1.125rem;
  }

  .layout-section__title {
      margin: 0 0 20px;
  }

  .section--why-us__description {
      margin: 0;
      max-width: 465px;
  }

  .layout-section__description {
      /* margin: 0 auto; */
      max-width: 465px;
  }


.section--why-us__container {
    padding-bottom: 90px;
    display: flex;
    -ms-flex-pack: end;
    justify-content: flex-end;
        height: 100%;
}
.section--why-us__content {
    -ms-flex-align: end;
    align-items: flex-end;
    display: -ms-flexbox;
    display: flex;
}
.section--why-us__bar-wrapper:first-of-type {
    margin-right: 45px;
}
.section--why-us__bar-wrapper {
    -ms-flex-align: center;
    align-items: center;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
}
.section--why-us__bar--low.animate {
    animation: bar-grow-low 1.5s normal forwards;
}
.section--why-us__bar--low {
    height: 40px;
}
.section--why-us__bar {
    -ms-flex-align: center;
    align-items: center;
    display: -ms-flexbox;
    display: flex;
}

.bar--scarlet {
    background-color: #930303;
    color: #fff;
}
.bar {
    background-color: #bfbfbf;
    border-radius: 4px;
    color: #4d4d4d;
    font-family: nunito-sans,Arial,sans-serif;
    font-size: 2rem;
    padding: 36px 25px;
}
.section--why-us__bar-title {
    font-family: nunito-sans,Arial,sans-serif;
    font-size: 1.1rem;
    letter-spacing: .03125rem;
    margin-top: 12px;
}
.section--why-us__bar-wrapper:last-of-type {
    margin-left: 45px;
}
.section--why-us__bar-wrapper {
    -ms-flex-align: center;
    align-items: center;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
}
.section--why-us__bar--high.animate {
    animation: bar-grow-high 1.5s normal forwards;
}
.section--why-us__bar--low,
.section--why-us__bar--high{
    height: 40px;
}

.section--why-us__bar {
    -ms-flex-align: center;
    align-items: center;
    display: -ms-flexbox;
    display: flex;
}
.bar--scarlet {
    background-color: #930303;
    color: #fff;
}

.section--why-us__bar-title {
    font-family: nunito-sans,Arial,sans-serif;
    font-size: 1.1rem;
    line-height: 1.125rem;
    letter-spacing: .03125rem;
    margin-top: 12px;
}
   @media only screen and (max-width: 768px) {
       .cust_infor_sec_img {
    width: 100% !important;
    display: flex;
    justify-content: center;
}
     .layout-section__description {
    margin-bottom: 20px;
           font-size: 1.7rem;
}
  .button{
    margin: 30px auto 0;
    max-width: 250px;
    display: block;
  }   
  .maindiv{
    display: block;
  }
     .maindiv .first{
      width: 100% !important;
     }
     .section--why-us__container{
       padding: 0px;
     }
}

    </style>

    <div class="js-on-show" data-onshow-target=".bar" data-onshow-class="animate">
    <div class="maindiv page-width section-{{ section.id }}-padding">
        <div class="first" style="width: 45%;">
            <small class="layout-section__eyebrow">{{ section.settings.firsttext }}</small>
            <h2 class="layout-section__title h1">{{ section.settings.secondttext }}</h2>
            <p class="layout-section__description section--why-us__description">{{ section.settings.thirdtext }}</p>
                <a href="{{ section.settings.btnlink }}" style="margin-top: 30px;" class="button small-hide">{{ section.settings.btntext }}</a>
        </div>
        <div class="second">
            <div class="section--why-us__container">
                <div class="section--why-us__content">
                  <div class="section--why-us__bar-wrapper">
                    <span class="bar bar--scarlet section--why-us__bar section--why-us__bar--low">{{ section.settings.dollar }}</span>
                    <h3 class="section--why-us__bar-title">{{ section.settings.dollartext }}</h3>
                  </div>
                  <div class="section--why-us__bar-wrapper">
                    <span class="bar bar--gray section--why-us__bar section--why-us__bar--high">{{ section.settings.dollarone }}</span>
                    <h3 class="section--why-us__bar-title">{{ section.settings.dollartextone }}</h3>
                  </div>
                </div>
              </div>
          <a href="{{ section.settings.btnlink }}" style="margin-top: 30px;" class="button medium-up-hide">{{ section.settings.btntext }}</a>
        </div>
        <div class="cust_infor_sec_img" style="width:40%;">
         <img src="{{ section.settings.image | img_url: 'master' }}">
        </div>
    </div>
    </div>
