{% style %}
html body .mega-menu__product {
    overflow: scroll;
    height: 100vh;
}
/*   color variants */
  .color-item__input:checked+.color-item__label {
    border-color: #000;
}
  .color-item__label:hover {
    border-color: #bfbfbf;
}
  select#mega-menu-product-variants {
    display: none;
}
  select.select.mega-menu__product-variants {
        border: 1px solid #1C1C1C;
    color: black;
    padding: 8px;
}

  .mega-menu__product {
    background: #f2f2f2;
    bottom: 0;
    display: none;
    left: calc(((100vw - 1280px) / 2) + 410px);
    overflow: hidden;
    position: fixed;
    right: 0;
    top: 36px;
    z-index: 4;
}
  .mega-menu__loader {
    display: none;
    left: calc(((100vw - 1280px) / 2) + 410px) !important;
    
}
  .loader {
    position: fixed;
    height: 0;
    width: 0;
    right: 0;
    margin: auto;
    top: 0;
    bottom: 0;
}
  .loader:before {
    background-color: #930303;
    animation: clockwise 2s ease infinite;
}
  .loader:after {
    background-color: #531111;
    animation: anticlockwise 2s ease infinite;
}
  .loader:after, .loader:before {
    content: "";
    position: absolute;
    height: 20px;
    width: 20px;
    display: block;
    border-radius: 50px;
}
  .loader, .loader:after, .loader:before {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}
  .mega-menu__product-wrapper {
    -ms-flex-align: center;
    align-items: center;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    margin-top: calc(((100vh - 40px) - 680px) / 2);
}
  .mega-menu__product .mega-menu__product-img-wrapper {
    height: 330px;
}
  .color-item, .color-picker {
    display: flex;
}
  .color-item {
    -ms-flex-align: center;
    align-items: center;
    height: 32px;
    -ms-flex-pack: center;
    justify-content: center;
    margin-right: 10px;
    width: 32px;
}
  .color-item__input {
    display: none;
}
  .color-item__label {
    border: 1px solid transparent;
    border-radius: 100%;
    cursor: pointer;
    display: inline-block;
    height: 32px;
    padding: 4px;
    position: relative;
    width: 32px;
}
  .color-item__label div {
    background: #000;
    border: 1px solid gray;
    border-radius: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    width: 100%;
}
  .color-item__label span {
    display: inline-block;
    height: 9.5px;
    position: absolute;
    width: 100%;
}
  .mega-menu__product .mega-menu__product-info-wrapper {
    margin-bottom: 10px;
}
  .mega-menu__product-info-wrapper {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
    margin: 30px 0;
    min-width: 565px;
    max-width: 720px;
}
  .mega-menu__product-title {
    font-size: 4rem;
    line-height: 1.75rem;
    margin-bottom: 8px;
}
  .mega-menu__product-type {
    color: #4d4d4d;
    display: inline-block;
    font-size: .8125rem;
    line-height: 1.75rem;
    text-transform: capitalize;
}
  .mega-menu__product-info .mega-menu__product-price {
    font-family: nunito-sans--light,Arial,sans-serif;
    display: block;
    font-size: 2rem;
    font-weight: 600;
    padding: 8px 0;
}
  .mega-menu__product-variables {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: center;
    justify-content: center;
    margin-left: 50px;
    min-width: 180px;
}
  .select-wrapper {
    background-color: #fff;
    background-image: url(data:image/png;base64,);
    background-position: calc(100% - 15px);
    background-repeat: no-repeat;
    background-size: 20px;
}
  .select-wrapper .select {
    background-color: transparent;
    width: 100%;
}
  .mega-menu__product-actions {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
    margin: 0 auto;
    max-width: 720px;
    width: 100%;
}
  .mega-menu__product .mega-menu__product-actions .mega-menu__product-url {
    background: #F8F8F8;
    border: 1px solid #1C1C1C;
    box-sizing: border-box;
    border-radius: 1px;
    color: #1C1C1C;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 22px;
}
    .mega-menu__product-url:hover {
    background: #1C1C1C !important;
    color: #F8F8F8 !important;
}
  .mega-menu__product-actions>* {
    width: 48%;
}
{% endstyle %}