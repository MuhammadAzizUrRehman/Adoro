{% style %}
/*   signature seciton */
  .signatures__wrapper {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
}
  section.story_page_rich_text .rich-text__wrapper,
  .banner{
    max-width: 760px;
        margin: 0px auto;
}
  .banner{
    max-width: 850px;
}
  section.story_page_rich_text .rich-text__text.rte {
    max-width: 700px;
  }
  section.story_page_rich_text h2.rich-text__heading.rte.h1 {
    margin-bottom: 60px;
        font-family: georgia-bold,serif;
    font-size: 3.2rem !important;
}
  section.story_page_rich_text .rich-text__text.rte {
    font-size: 2.1rem;
    text-align: left;
        font-family: georgia-bold,serif;
        line-height: initial;
        margin-bottom: 40px;
        line-height: 3rem;
}
  section.story_page_rich_text blockquote {
    margin-left: 0px;
    margin-right: 0px;
    padding-left: 40px;
        font-style: normal;
        color: inherit;
        border-left: 1px solid #707070;
}
  @media(max-width: 767px){
    section.story_page_rich_text h2.rich-text__heading.rte.h1{
      padding: 0px;
    }
    .signature__item img {
    max-height: 62px;
}

  }
{% endstyle %}